<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cloud Computing Services - IB CS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #1a2980, #26d0ce);
            color: #333;
            min-height: 100vh;
            padding-bottom: 40px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        header {
            text-align: center;
            padding: 40px 0;
            color: white;
        }

        h1 {
            font-size: 3rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        h2 {
            font-size: 1.8rem;
            margin-bottom: 30px;
            font-weight: 300;
        }

        h3 {
            font-size: 1.5rem;
            margin: 20px 0;
            color: #1a2980;
        }

        .nav-container {
            display: flex;
            justify-content: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 10px;
        }

        .nav-btn {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            border-radius: 30px;
            padding: 12px 25px;
            color: white;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            margin: 0 5px;
        }

        .nav-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-3px);
        }

        .nav-btn.active {
            background: white;
            color: #1a2980;
            font-weight: bold;
        }

        .content-section {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            display: none;
        }

        .content-section.active {
            display: block;
            animation: fadeIn 0.5s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .intro-text {
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin-top: 30px;
        }

        .service-card {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 25px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-top: 5px solid;
        }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .service-card h4 {
            font-size: 1.3rem;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

        .service-card h4 i {
            margin-right: 10px;
            font-size: 1.5rem;
        }

        .service-card.saas {
            border-color: #ff6b6b;
        }

        .service-card.paas {
            border-color: #4ecdc4;
        }

        .service-card.iaas {
            border-color: #1a2980;
        }

        .service-list {
            list-style-type: none;
            margin: 15px 0;
        }

        .service-list li {
            padding: 8px 0;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
        }

        .service-list li i {
            margin-right: 10px;
            color: #1a2980;
        }

        .comparison-table {
            width: 100%;
            border-collapse: collapse;
            margin: 30px 0;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            border-radius: 10px;
            overflow: hidden;
        }

        .comparison-table th, .comparison-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .comparison-table th {
            background-color: #1a2980;
            color: white;
            font-weight: 500;
        }

        .comparison-table tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .comparison-table tr:hover {
            background-color: #edf2ff;
        }

        .scenario-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .scenario-card {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 20px;
            border-left: 5px solid #1a2980;
        }

        .scenario-card h4 {
            color: #1a2980;
            margin-bottom: 15px;
        }

        .controls-flex {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }

        .ctrl-btn {
            background: #1a2980;
            color: white;
            border: none;
            border-radius: 30px;
            padding: 12px 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

        .ctrl-btn:hover {
            background: #26d0ce;
            transform: translateY(-3px);
        }

        .ctrl-btn i {
            margin-right: 8px;
        }

        .ctrl-btn.prev {
            background: #4ecdc4;
        }

        footer {
            text-align: center;
            color: white;
            margin-top: 40px;
            padding: 20px;
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 2.2rem;
            }
            
            h2 {
                font-size: 1.4rem;
            }
            
            .services-grid, .scenario-cards {
                grid-template-columns: 1fr;
            }
            
            .controls-flex {
                flex-direction: column;
                gap: 15px;
            }
            
            .ctrl-btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Cloud Computing Services</h1>
            <h2>Understanding SaaS, PaaS, and IaaS</h2>
            
            <div class="nav-container">
                <button class="nav-btn active" data-target="intro">Introduction</button>
                <button class="nav-btn" data-target="services">Service Models</button>
                <button class="nav-btn" data-target="comparison">Comparison</button>
                <button class="nav-btn" data-target="scenarios">Real-world Scenarios</button>
            </div>
        </header>
        
        <main>
            <section id="intro" class="content-section active">
                <h3>Introduction to Cloud Computing</h3>
                <p class="intro-text">
                    Cloud computing is the on-demand delivery of IT resources over the Internet with pay-as-you-go pricing. 
                    Instead of buying, owning, and maintaining physical data centers and servers, you can access technology services, 
                    such as computing power, storage, and databases, on an as-needed basis from a cloud provider.
                </p>
                
                <div class="services-grid">
                    <div class="service-card saas">
                        <h4><i class="fas fa-cloud"></i> SaaS</h4>
                        <p>Software as a Service delivers software applications over the Internet, on a subscription basis.</p>
                    </div>
                    
                    <div class="service-card paas">
                        <h4><i class="fas fa-cogs"></i> PaaS</h4>
                        <p>Platform as a Service provides a platform allowing customers to develop, run, and manage applications.</p>
                    </div>
                    
                    <div class="service-card iaas">
                        <h4><i class="fas fa-server"></i> IaaS</h4>
                        <p>Infrastructure as a Service provides basic computing infrastructure like servers, storage, and networking resources.</p>
                    </div>
                </div>
                
                <div class="controls-flex">
                    <div></div> <!-- Empty div for spacing -->
                    <button class="ctrl-btn next" data-next="services">Next: Service Models <i class="fas fa-arrow-right"></i></button>
                </div>
            </section>
            
            <section id="services" class="content-section">
                <h3>Cloud Service Models</h3>
                
                <div class="services-grid">
                    <div class="service-card saas">
                        <h4><i class="fas fa-cloud"></i> Software as a Service (SaaS)</h4>
                        <p>Ready-to-use software applications delivered over the internet.</p>
                        
                        <ul class="service-list">
                            <li><i class="fas fa-check-circle"></i> Provider manages everything</li>
                            <li><i class="fas fa-check-circle"></i> Accessed via web browser</li>
                            <li><i class="fas fa-check-circle"></i> No installation or maintenance</li>
                            <li><i class="fas fa-check-circle"></i> Subscription-based pricing</li>
                        </ul>
                        
                        <p><strong>Examples:</strong> Gmail, Microsoft Office 365, Salesforce, Netflix</p>
                    </div>
                    
                    <div class="service-card paas">
                        <h4><i class="fas fa-cogs"></i> Platform as a Service (PaaS)</h4>
                        <p>Development and deployment platform in the cloud.</p>
                        
                        <ul class="service-list">
                            <li><i class="fas fa-check-circle"></i> Provider manages runtime environment</li>
                            <li><i class="fas fa-check-circle"></i> Developers focus on code</li>
                            <li><i class="fas fa-check-circle"></i> Automated deployment and scaling</li>
                            <li><i class="fas fa-check-circle"></i> Middleware, OS, and virtualization managed</li>
                        </ul>
                        
                        <p><strong>Examples:</strong> Google App Engine, Microsoft Azure App Service, Heroku</p>
                    </div>
                    
                    <div class="service-card iaas">
                        <h4><i class="fas fa-server"></i> Infrastructure as a Service (IaaS)</h4>
                        <p>Basic computing infrastructure provided as a service.</p>
                        
                        <ul class="service-list">
                            <li><i class="fas fa-check-circle"></i> Provider manages physical infrastructure</li>
                            <li><i class="fas fa-check-circle"></i> User manages OS, applications, and data</li>
                            <li><i class="fas fa-check-circle"></i> Highest level of flexibility</li>
                            <li><i class="fas fa-check-circle"></i> Pay-for-what-you-use model</li>
                        </ul>
                        
                        <p><strong>Examples:</strong> Amazon Web Services (AWS), Microsoft Azure, Google Compute Engine</p>
                    </div>
                </div>
                
                <div class="controls-flex">
                    <button class="ctrl-btn prev" data-prev="intro"><i class="fas fa-arrow-left"></i> Previous: Introduction</button>
                    <button class="ctrl-btn next" data-next="comparison">Next: Comparison <i class="fas fa-arrow-right"></i></button>
                </div>
            </section>
            
            <section id="comparison" class="content-section">
                <h3>Comparing Service Models</h3>
                
                <table class="comparison-table">
                    <thead>
                        <tr>
                            <th>Aspect</th>
                            <th>SaaS</th>
                            <th>PaaS</th>
                            <th>IaaS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>User Control</td>
                            <td>Lowest (only data & configuration)</td>
                            <td>Medium (application & data)</td>
                            <td>Highest (OS, runtime, applications, data)</td>
                        </tr>
                        <tr>
                            <td>Technical Skills Required</td>
                            <td>None (end-user skills)</td>
                            <td>Development skills</td>
                            <td>IT operations skills</td>
                        </tr>
                        <tr>
                            <td>Scalability</td>
                            <td>Automatic</td>
                            <td>Automatic</td>
                            <td>User-managed</td>
                        </tr>
                        <tr>
                            <td>Maintenance</td>
                            <td>Handled by provider</td>
                            <td>Handled by provider</td>
                            <td>User handles patches, updates, etc.</td>
                        </tr>
                        <tr>
                            <td>Cost Model</td>
                            <td>Subscription-based</td>
                            <td>Pay per use</td>
                            <td>Pay per use</td>
                        </tr>
                    </tbody>
                </table>
                
                <h3>Pizza as a Service Analogy</h3>
                <p class="intro-text">
                    Imagine cloud services as different ways to get a pizza:
                </p>
                
                <ul class="service-list">
                    <li><i class="fas fa-pizza-slice"></i> <strong>IaaS</strong> - You buy pre-made ingredients and make the pizza yourself</li>
                    <li><i class="fas fa-pizza-slice"></i> <strong>PaaS</strong> - You give instructions and someone makes the pizza for you</li>
                    <li><i class="fas fa-pizza-slice"></i> <strong>SaaS</strong> - You just eat the pizza when it's delivered to you</li>
                </ul>
                
                <div class="controls-flex">
                    <button class="ctrl-btn prev" data-prev="services"><i class="fas fa-arrow-left"></i> Previous: Service Models</button>
                    <button class="ctrl-btn next" data-next="scenarios">Next: Real-world Scenarios <i class="fas fa-arrow-right"></i></button>
                </div>
            </section>
            
            <section id="scenarios" class="content-section">
                <h3>Real-world Scenarios</h3>
                <p class="intro-text">
                    Different cloud service models are suited for different scenarios. The choice depends on the level of control, flexibility, and management required.
                </p>
                
                <div class="scenario-cards">
                    <div class="scenario-card">
                        <h4><i class="fas fa-building"></i> Large Enterprise</h4>
                        <p>A large company with IT staff might use <strong>IaaS</strong> to have full control over their infrastructure while avoiding capital expenditure on hardware.</p>
                    </div>
                    
                    <div class="scenario-card">
                        <h4><i class="fas fa-startup"></i> Startup Company</h4>
                        <p>A tech startup might use <strong>PaaS</strong> to quickly develop and deploy applications without managing the underlying infrastructure.</p>
                    </div>
                    
                    <div class="scenario-card">
                        <h4><i class="fas fa-user-graduate"></i> University Student</h4>
                        <p>A student would use <strong>SaaS</strong> applications like Google Docs for writing assignments without any technical setup or maintenance.</p>
                    </div>
                </div>
                
                <h3>Resource Management Considerations</h3>
                <p class="intro-text">
                    The choice of service model directly impacts resource management:
                </p>
                
                <ul class="service-list">
                    <li><i class="fas fa-database"></i> <strong>SaaS</strong> - No resource management needed</li>
                    <li><i class="fas fa-database"></i> <strong>PaaS</strong> - Some resource allocation and scaling configuration</li>
                    <li><i class="fas fa-database"></i> <strong>IaaS</strong> - Full control over resource allocation and management</li>
                </ul>
                
                <div class="controls-flex">
                    <button class="ctrl-btn prev" data-prev="comparison"><i class="fas fa-arrow-left"></i> Previous: Comparison</button>
                    <button class="ctrl-btn next" data-next="intro">Back to Introduction <i class="fas fa-arrow-right"></i></button>
                </div>
            </section>
        </main>
        
        <footer>
            <p>IB Computer Science - Cloud Computing Services | SaaS, PaaS, IaaS</p>
            <p>Created for educational purposes</p>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Navigation buttons functionality
            const navButtons = document.querySelectorAll('.nav-btn');
            const contentSections = document.querySelectorAll('.content-section');
            const nextButtons = document.querySelectorAll('.next');
            const prevButtons = document.querySelectorAll('.prev');
            
            // Initialize first section as active
            showSection('intro');
            
            // Add click events to navigation buttons
            navButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const target = this.getAttribute('data-target');
                    
                    // Update active button
                    navButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Show corresponding section
                    showSection(target);
                });
            });
            
            // Add click events to next buttons
            nextButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const target = this.getAttribute('data-next');
                    
                    // Update active button
                    navButtons.forEach(btn => {
                        btn.classList.remove('active');
                        if (btn.getAttribute('data-target') === target) {
                            btn.classList.add('active');
                        }
                    });
                    
                    // Show corresponding section
                    showSection(target);
                });
            });
            
            // Add click events to previous buttons
            prevButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const target = this.getAttribute('data-prev');
                    
                    // Update active button
                    navButtons.forEach(btn => {
                        btn.classList.remove('active');
                        if (btn.getAttribute('data-target') === target) {
                            btn.classList.add('active');
                        }
                    });
                    
                    // Show corresponding section
                    showSection(target);
                });
            });
            
            // Function to show a specific section
            function showSection(sectionId) {
                contentSections.forEach(section => {
                    section.classList.remove('active');
                    if (section.id === sectionId) {
                        section.classList.add('active');
                        
                        // Scroll to the top of the section
                        window.scrollTo({
                            top: section.offsetTop - 100,
                            behavior: 'smooth'
                        });
                    }
                });
            }
            
            // Add some interactive animations to service cards
            const serviceCards = document.querySelectorAll('.service-card');
            
            serviceCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.boxShadow = '0 10px 20px rgba(0, 0, 0, 0.1)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '0 5px 15px rgba(0, 0, 0, 0.05)';
                });
            });
        });
    </script>
</body>
</html>
